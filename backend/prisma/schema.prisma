// ============ Message Templates & Communication Center ============

model MessageTemplate {
  id          String         @id @default(uuid())
  event       MessageEvent
  channel     MessageChannel
  language    String         @default("ar")
  name        String
  nameAr      String?
  nameEn      String?
  subject     String?
  subjectAr   String?
  subjectEn   String?
  body        String         @db.Text
  bodyAr      String?        @db.Text
  bodyEn      String?        @db.Text
  variables   String?
  description String?
  isDefault   Boolean        @default(false)
  isActive    Boolean        @default(true)
  sortOrder   Int            @default(0)
  createdBy   String?
  updatedBy   String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  logs MessageLog[]

  @@unique([event, channel, language])
  @@index([event])
  @@index([channel])
  @@index([isActive])
}

model MessageLog {
  id             String           @id @default(uuid())
  templateId     String?
  template       MessageTemplate? @relation(fields: [templateId], references: [id], onDelete: SetNull)
  event          MessageEvent
  channel        MessageChannel
  language       String           @default("ar")
  recipientId    String?
  recipientType  String?
  recipientName  String?
  recipientPhone String?
  recipientEmail String?
  subject        String?
  body           String           @db.Text
  variables      String?
  status         MessageStatus    @default(PENDING)
  sentAt         DateTime?
  deliveredAt    DateTime?
  readAt         DateTime?
  errorMessage   String?
  errorCode      String?
  retryCount     Int              @default(0)
  externalId     String?
  metadata       String?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  @@index([event])
  @@index([channel])
  @@index([status])
  @@index([recipientId])
  @@index([createdAt])
}

model MessageTemplateVariable {
  id          String       @id @default(uuid())
  event       MessageEvent
  code        String
  name        String
  nameAr      String?
  nameEn      String?
  description String?
  sampleValue String?
  isRequired  Boolean      @default(false)
  sortOrder   Int          @default(0)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([event, code])
  @@index([event])
}

model MessageSettings {
  id                    String   @id @default(uuid())
  key                   String   @unique @default("global")
  defaultLanguage       String   @default("ar")
  enableWhatsApp        Boolean  @default(true)
  enableEmail           Boolean  @default(true)
  enableNotifications   Boolean  @default(true)
  whatsappApiUrl        String?
  whatsappApiKey        String?
  whatsappPhoneNumberId String?
  emailProvider         String   @default("SMTP")
  emailFromAddress      String?
  emailFromName         String?
  smtpHost              String?
  smtpPort              Int?
  smtpUser              String?
  smtpPassword          String?
  retryAttempts         Int      @default(3)
  retryDelayMinutes     Int      @default(5)
  logRetentionDays      Int      @default(90)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

// ============ Core Notification System ============

model Notification {
  id        String       @id @default(uuid())
  userId    String
  event     MessageEvent
  title     String
  body      String       @db.Text
  link      String?
  imageUrl  String?
  priority  String       @default("normal")
  category  String?
  isRead    Boolean      @default(false)
  readAt    DateTime?
  metadata  String?
  createdAt DateTime     @default(now())
  expiresAt DateTime?

  @@index([userId])
  @@index([userId, isRead])
  @@index([createdAt])
  @@index([event])
}

model UserNotificationSettings {
  id                 String       @id @default(uuid())
  userId             String
  event              MessageEvent
  enableInApp        Boolean      @default(true)
  enableEmail        Boolean      @default(true)
  enableWhatsApp     Boolean      @default(false)
  languagePreference String       @default("ar")
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt

  @@unique([userId, event])
  @@index([userId])
}

// ============ Reports Center ============

model ReportDefinition {
  id            String   @id @default(uuid())
  code          String   @unique
  name          String
  nameAr        String?
  nameEn        String?
  description   String?
  descriptionAr String?
  descriptionEn String?
  category      String   @default("GENERAL")
  allowedRoles  String[] @default([])
  isActive      Boolean  @default(true)
  sortOrder     Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  executionLogs ReportExecutionLog[]

  @@index([code])
  @@index([isActive])
  @@index([category])
}

model ReportExecutionLog {
  id             String   @id @default(uuid())
  reportCode     String
  userId         String
  filtersSummary String?
  status         String   @default("SUCCESS")
  durationMs     Int      @default(0)
  errorMessage   String?
  createdAt      DateTime @default(now())

  report ReportDefinition @relation(fields: [reportCode], references: [code])

  @@index([reportCode])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

model ReportAIAnalysisLog {
  id             String   @id @default(uuid())
  reportCode     String
  userId         String
  filtersSummary String?
  aiPromptType   String
  aiResponse     String?
  durationMs     Int      @default(0)
  createdAt      DateTime @default(now())

  @@index([reportCode])
  @@index([userId])
  @@index([aiPromptType])
  @@index([createdAt])
  @@index([userId, reportCode, filtersSummary])
}
